@using Microsoft.AspNetCore.Identity
@using Cereal.Models
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css?family=Roboto|Satisfy" rel="stylesheet">
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <h1>Cereal</h1>
        <nav>
            <p>Hello, @User.Claims.First(name => name.Type == "FullName").Value</p>
            <form asp-action="Logout" asp-controller="Account" method="post">
                <button type="submit">Logout</button>
            </form>
        </nav>
        <nav class="navigation">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Product" asp-action="Index">Products</a>
        </nav>
    }
    else
    {
        <h1>Cereal</h1>
        <nav>
            <form asp-action="Logout" asp-controller="Account" method="post">
                <button type="submit">Logout</button>
            </form>
        </nav>
        <nav class="navigation">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Product" asp-action="Index">Products</a>
        </nav>
    }

    <nav class="navigation">
        <a asp-controller="AccountController" asp-action="Register">Register</a>
        <a asp-controller="AccountController" asp-action="Login">Login</a>
    </nav>
    <main>
        @RenderBody()
    </main>
</body>
</html>
